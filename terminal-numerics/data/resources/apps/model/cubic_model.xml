<app>
	<name>Hands-on Cubics</name>
	<version>1.0</version>
	<description>Visualize the properties of cubic functions.</description>
	<standards></standards>
	<dependencies>module.graph_module</dependencies>
	<layout type="border">
		<tabs>
			<graph_model title="Standard Form" model="a*x^3 + b*x^2 + c*x + d" display="ax³ + bx² + cx + d" input="a:1 b:0 c:0 d:0" />
			<graph_model title="Vertex Form" model="a(x - h)^3 + k" display="a(x - h)³ + k" input="a:1 h:0 k:0" />
		</tabs>
	</layout>
</app>